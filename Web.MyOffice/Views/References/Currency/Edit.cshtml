@model Web.MyOffice.Models.Currency

@{
    ViewBag.Title = S.Edit + " - " + Model.Name;
}

@Html.Top()

@using (Html.FormHorizontal())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.RowLabelEditorValidation(model => model.Name, model => model.Name)

    @Html.RowLabelEditorValidation(model => model.ShortName, model => model.ShortName)

    @Html.RowLabelDropBoxValidation(model => model.CurrencyType, model => model.CurrencyType, "CurrencyType", Model.CurrencyType.ToSelectList())

    @Html.ButtonSave();
}

@Html.BackToIndex()