@{
    ViewBag.Title = @S.AppName;
}

<div class="jumbotron">
    <h1>@S.AppName</h1>
    <p class="lead"></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>@S.ForFreelancer</h2>
        @{
            var ForFreelancer1 = @S.ForFreelancer1;
            var link = @Html.ActionLink(@S.OfСustomers, "Index", "Member");
            TagBuilder tag = new TagBuilder("a");
            tag.MergeAttribute("href", "/Project#/project");
            tag.SetInnerText(@S.OfWork);
            ForFreelancer1 = String.Format(ForFreelancer1, link, tag.ToString());
        }
        <li>@Html.Raw(@ForFreelancer1) </li>
        <p></p>
        <li><a href="~/Project#/project">@S.ForFreelancer2</a></li>
        <p></p>
        <li><a href="~/Project#/memberdayreport">@S.ForFreelancer3</a></li>
        <p></p>
        <li><a href="~/Project#/Debts/1">@S.ForFreelancer4</a></li>
        <p></p>
        @*<p><a class="btn btn-default" href="@Url.Action("ForFreelancer")">@S.MoveTo &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>@S.Finance</h2>
        @{ 
            var Finance1 = @S.Finance1;
            TagBuilder DifferentAccountsTag = new TagBuilder("a");
            DifferentAccountsTag.MergeAttribute("href", "/Project#/BankAccounts");
            DifferentAccountsTag.SetInnerText(@S.DifferentAccounts);

            TagBuilder DifferentCurrenciestTag = new TagBuilder("a");
            DifferentCurrenciestTag.MergeAttribute("href", "/Project#/Currencies");
            DifferentCurrenciestTag.SetInnerText(@S.DifferentCurrencies);

            Finance1 = String.Format(Finance1, DifferentAccountsTag.ToString(), DifferentCurrenciestTag.ToString());
        }
        <li>@Html.Raw(Finance1)</li>  
        <p></p>
        <li>@Html.ActionLink(@S.Finance2, "Index", "MyBankReports")</li> 
        <p></p>
        @*<p><a class="btn btn-default" href="@Url.Action("Finance")">@S.MoveTo &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>@S.ForCustomer</h2>
        <li><a href="~/Project#/project">@S.ForCustomer1</a></li> 
        <p></p>
        <li><a href="~/Project#/Debts/2">@S.ForCustomer2</a></li>
        <p></p>
        @*<p><a class="btn btn-default" href="@Url.Action("ForCustomer")">@S.MoveTo &raquo;</a></p>*@
    </div>
</div>