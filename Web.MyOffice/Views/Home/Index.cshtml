@{
    ViewBag.Title = @S.AppName;
}

<div class="jumbotron">
    <h1>@S.AppName</h1>
    <p class="lead"></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>@S.ForFreelancer</h2>
       
        @helper CreateLink(string link, string text)
        {
            <a href="@link">@text</a>
        }

        @{  
            var Member = @Html.ActionLink(@S.OfСustomers, "Index", "Member");
            var OfWork = CreateLink("/Project#/project" , @S.OfWork);

            var ForFreelancer1 = String.Format(@S.ForFreelancer1, Member, OfWork);

            var DifferentAccounts = CreateLink("/Project#/BankAccounts", @S.DifferentAccounts);
            var DifferentCurrencies = CreateLink("/Project#/Currencies", @S.DifferentCurrencies);

            var Finance1 = String.Format(@S.Finance1, DifferentAccounts, DifferentCurrencies);
        }
        <li>@Html.Raw(@ForFreelancer1) </li>
        <p></p>
        <li><a href="~/Project#/project">@S.ForFreelancer2</a></li>
        <p></p>
        <li><a href="~/Project#/memberdayreport">@S.ForFreelancer3</a></li>
        <p></p>
        <li><a href="~/Project#/Debts/1">@S.ForFreelancer4</a></li>
        <p></p>
        @*<p><a class="btn btn-default" href="@Url.Action("ForFreelancer")">@S.MoveTo &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>@S.Finance</h2>
        <li>@Html.Raw(Finance1)</li>  
        <p></p>
        <li>@Html.ActionLink(@S.Finance2, "Index", "MyBankReports")</li> 
        <p></p>
        @*<p><a class="btn btn-default" href="@Url.Action("Finance")">@S.MoveTo &raquo;</a></p>*@
    </div>
    <div class="col-md-4">
        <h2>@S.ForCustomer</h2>
        <li><a href="~/Project#/project">@S.ForCustomer1</a></li> 
        <p></p>
        <li><a href="~/Project#/Debts/2">@S.ForCustomer2</a></li>
        <p></p>
        @*<p><a class="btn btn-default" href="@Url.Action("ForCustomer")">@S.MoveTo &raquo;</a></p>*@
    </div>
</div>