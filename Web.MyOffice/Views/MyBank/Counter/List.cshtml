@{
    Layout = null;
}
<form style="padding: 10px">
    <div class="modal-header">
        <button type="button"
                class="close"
                data-dismiss="modal"
                aria-hidden="true"
                tabindex="-1"
                ng-click='closeDialog()'>
            &times;
        </button>
        <h4 class="modal-title">@R.R.BanknoteCounter</h4>
    </div>
    <div clas="modal-body">
        <table class="table  table-striped">
            <tr>
                <th>@R.R.Banknote</th>
                <th>@R.R.Quantity</th>
                <th>@R.R.Total</th>
                <th></th>
            </tr>
            <tr ng-repeat="banknote in banknotes">
                <td>
                    <input type="number" class="form-control" disabled ng-model="banknote.nominal"/>
                </td>
                <td>
                    <input class="form-control" type="number" min="0"  ng-change="banknote.totalCostCalc()"  ng-model="banknote.quantity"/>
                </td>
                <td>
                    <input class="form-control" type="text" disabled value="{{banknote.totalCost}}"/>
                </td>
                <td>
                    <button class="form-control btn btn-danger" tabindex="-1" ng-click="DeleteBanknote(banknote)">@R.R.Delete</button>
                </td>
            </tr>
            <tr>
                <td>
                    <button class="form-control btn btn-success" tabindex="-1"  ng-click="AddBanknote(selectedNominal)">@R.R.Add</button>
                </td>
                <td>
                    <input type="number"  min="1" class="form-control" ng-model="selectedNominal"/>
                </td>
                <th class="text-right">
                    @R.R.Total:
                </th>
                <td >
                    <input id="totalMoney" tabindex="-1"  type="text" class="form-control" disabled value="{{totalMoney}}"/>
                </td>
            </tr>
        </table>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default"  tabindex="-1" ng-click="closeDialog()">@R.R.Close</button>
    </div>
</form>