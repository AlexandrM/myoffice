<div>
    
    <form name="form" novalidate>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="MWS.close('BudgetUsers')">&times;</button>
            <h4 class="modal-title">@R.R.Edit</h4>
        </div>

        <div class="modal-body">
            <input type="hidden" ng-model="model.Id"/>
            
            <table class="table table-stripped">
                <tr>
                    <th>@R.R.User</th>
                    <th>@R.R.Email</th>
                    <th></th>
                </tr>
                    <tr ng-repeat="user in currentBudget.Users">
                        <td>
                            {{user.User.FullName}}
                        </td>
                        <td>
                            {{user.User.Email}}
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger" ng-click="budgetUsersDelete(user)">@R.R.Delete</button>
                        </td>
                    </tr>
                <tr ng-class="{ 'has-error': form.$invalid && form.$submited }">
                    <td>
                        <label>Enter user email</label>
                    </td>
                    <td>
                        <input class="form-control" ng-model="addUserEmail" required  />
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" ng-click="budgetUsersAdd(addUserEmail, form)">@R.R.Add</button>
                    </td>
                </tr>
            </table>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="MWS.close('BudgetUsers')">@R.R.Close</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="updateBudgetList()">@R.R.Save</button>
        </div>
    </form>
</div>
