<link rel="stylesheet" href="~/Content/FormValidationStyles.css"/>
<div id="ItemEdit">
    <form name="ItemEditForm">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="MWS.close('ItemAdd')">&times;</button>
            <h4 class="modal-title">@R.R.Editing</h4>
        </div>

        <div class="modal-body">
            <input type="hidden" id="name" name="Id" value="newItem.Id" ng-model="newItem.Name" />
            <div class="form-group col-lg-12">
                <div class="col-sm-4">
                    <label for="Name">@R.R.Name</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="Name" id="Name"
                           class="form-control"
                           value="{{newItem.Name}}"
                           ng-required="true"
                           ng-model="newItem.Name" />
                </div>
            </div>
            
            <div class="form-group col-lg-12">
                <div class="col-sm-4">
                    <label for="Category">@R.R.Categories</label>
                </div>
                <div class="col-sm-8">
                    <select class="form-control" id="budgets" name="budgets" required
                            ng-required="true"
                            ng-model="newItem.CategoryId"
                            ng-options="o.Id as o.Name for o in Categories"
                    />
                </div>
            </div>

            <div class="form-group col-lg-12">
                <div class="col-sm-4">
                    <label for="Name">@R.R.Description</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="Name" id="Name"
                           class="form-control"
                           value="{{newItem.Description}}"
                           ng-model="newItem.Description" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" ng-click="addItem(newItem)">@R.R.Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="MWS.lose('ItemAdd')">@R.R.Close</button>
        </div>
    </form>
</div>
