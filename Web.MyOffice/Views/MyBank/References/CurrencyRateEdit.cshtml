@model CurrencyRate

<div class="dialogbody" currencyid="@Model.Currency.Id">
    @using (Html.BeginForm("CurrencyRateEdit", "References", FormMethod.Post, new { role = "form" }))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@R.R.Edit</h4>
        </div>

        <div class="modal-body">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CurrencyId)

            <div class="form-group">
                @Html.LabelFor(model => model.DateTime, new { @for = "DateTime"})
                @Html.TextBox("DateTime", Model.DateTime.ToShortDateString(), null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Rate, new { @for = "Rate"})
                @Html.TextBoxFor(model => model.Rate, null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Multiplicity, new { @for = "Multiplicity"})
                @Html.TextBoxFor(model => model.Multiplicity, null, new { @class = "form-control" })
            </div>

        </div>
            
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">@(Model == null ? R.R.Add : R.R.Save)</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">@R.R.Close</button>
        </div>
    }
</div>

